# oo
import java.io.*;
import java.util.*;
public class SumNumber{
  public static void main(String args[])
  {
    Scanner sc=new Scanner(System.in);
    int n,i=1,sum=0;
    
    System.out.print("Enter Number :");
    n=sc.nextInt();
    do
    {
      sum=sum+i;
      i +=1;
    }   while(i<=n);
    System.out.print("Sum of First " + n + " Numbers = "+sum);
  }
  
}
